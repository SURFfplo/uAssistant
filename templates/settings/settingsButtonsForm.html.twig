{% extends 'base-settings.html.twig' %}

{% block stylesheets %}
		
	<!-- Select2 -->
    <link href="{{ asset('assets/plugins/select2/css/select2.css') }}" rel="stylesheet" type="text/css" />
    
    {{ parent() }}
    
{% endblock %}

{% block body %}
<h2>Button toevoegen</h2>

{{ form(form) }}

{% endblock %}

{% block javascripts %}  
	
	{{ parent() }}
	
	<script type="text/javascript" src="{{ asset('assets/plugins/select2/js/select2.min.js') }}"></script>
    
    <script>
	    $(document).ready(function(){
	        $('.select2').select2({
		        
		        templateResult: formatState
	        });
	    });
	    
	    
	    function formatState (state) {
			if (!state.id) {
				return state.text;
			}
			
			var $state = $('<i class="mdi '+state.text+'"></i><span> ' + state.text + '</span>');
			
			return $state;
		};


	</script>
	
{% endblock %}



